<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="曾艺伦"
                android:id="@+id/textView" android:layout_weight="1" android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="彭万红"
                android:id="@+id/textView2" android:layout_weight="1" android:textColor="#000000"
               />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="唐琪琳"
                android:id="@+id/textView3" android:layout_weight="1" android:textColor="#000000"
              />
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1000"
                android:layout_weight="1"
                android:id="@+id/tv_balance1" android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1111"
                android:layout_weight="1"
                android:id="@+id/tv_balance2" android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1000"
                android:layout_weight="1"
                android:id="@+id/tv_balance3" android:textColor="#000000"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1月份"
                android:id="@+id/tv_month" android:paddingTop="5dp" android:paddingBottom="5dp"
                android:textColor="#000000"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="总计"
                android:id="@+id/textView5" android:layout_column="0" android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="￥10000"
                android:id="@+id/tv_total"
                android:paddingLeft="10dp" android:paddingRight="10dp" android:textColor="#000000"
                android:layout_column="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="每人平均"
                android:id="@+id/textView4" android:textColor="#000000" android:layout_column="2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="￥333"
                android:id="@+id/tv_avg" android:paddingLeft="10dp" android:textColor="#000000"
                android:layout_column="3"/>
    </TableRow>
</TableLayout>